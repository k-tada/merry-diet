<nav>
  <div class="contents">
    <%= form_for @task do |f| %>
      <hr>
      <div class="merry">
        <div class="bubble question">
          <div class="message">新しいタスクを登録するのね</div>
        </div>
      </div>
      <hr>
      <section class="when">
        <div class="merry">
          <div class="bubble question">
            <div class="message">いつ？</div>
          </div>
        </div>
        <div class="me">
          <div class="bubble answer">
            <%= f.text_field :when, class: 'datetimepicker', autocomplete: :off %>でお願い。
          </div>
        </div>
      </section>
      <hr>
      <section class="distance">
        <div class="merry">
          <div class="bubble question">
            <div class="message">どのぐらい歩くの？</div>
          </div>
        </div>
        <div class="me">
          <div class="bubble answer">
            <%= f.number_field :distance %>kmぐらいかな。
          </div>
        </div>
      </section>
      <% unless @user.phone_number.present? %>
      <%= fields_for @user do |u| %>
      <hr>
      <section class="phone_number">
        <div class="merry">
          <div class="bubble question">
            <div class="message">電話番号が未登録みたいね。教えてくれる？</div>
          </div>
        </div>
        <div class="me">
          <div class="bubble answer">
            <%= u.telephone_field :phone_number %>でお願い。
          </div>
        </div>
      </section>
      <% end %>
      <% end %>
      <hr>
      <section class="distance">
        <div class="merry">
          <div class="bubble question">
            <div class="message">これでOK？</div>
          </div>
        </div>
        <div class="me">
          <div class="bubble answer">
            <%= f.submit 'OK!!!' %>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</nav>
